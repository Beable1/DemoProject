<link rel="stylesheet" href="~/css/star.css">

@model int


<div class="comment-form">
    <h4>Leave a Reply</h4>
    <div>
        <form method="post" asp-action="BlogDetails" asp-controller="Blogs">
        <input type="hidden" name="BlogId" id="BlogId" value="@Model" />
           
        <div class="form-group form-inline">
            <div class="form-group col-lg-6 col-md-6 name">
                <input type="text" class="form-control"  name="CommentUserName" placeholder="Enter Name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter Name'">
            </div>

        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="CommentTitle" placeholder="Subject" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Subject'">
        </div>
        <div class="form-group">
            <textarea class="form-control mb-10" rows="5" name="CommentContent" placeholder="Messege" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Messege'" required=""></textarea>
        </div>

            <div class="form-group">
                <label for="Rating">Rate this Blog:</label>
                <div class="star-rating w-25">
                    <input  type="radio" name="Rating" value="5" id="5"><label for="5"><i class="fas fa-star"></i></label>
                    <input type="radio" name="Rating" value="4" id="4"><label for="4"><i class="fas fa-star"></i></label>
                    <input type="radio" name="Rating" value="3" id="3"><label for="3"><i class="fas fa-star"></i></label>
                    <input type="radio" name="Rating" value="2" id="2"><label for="2"><i class="fas fa-star"></i></label>
                    <input type="radio" name="Rating" value="1" id="1"><label for="1"><i class="fas fa-star"></i></label>
                </div>
            </div>
            
        
          

        <button type="submit" class="button submit_btn" >Post Comment</button>
        @* <a href="#" class="button submit_btn">Post Comment</a> *@

        </form>
    </div>


</div>


