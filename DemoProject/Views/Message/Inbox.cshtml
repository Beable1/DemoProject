@model List<MessageDto>

@{
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
    
}

<div class="card-body px-0 pt-0 pb-2">
    <div class="card p-3">

    <div class="table-responsive p-1">
        <h6>Inbox</h6>
        <table class="table align-items-center mb-0">
            <thead>
                <tr>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">User</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Subject</th>
                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Date</th>
                    
                    <th class="text-secondary opacity-7"></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex px-2 py-1">
                                <div>
                                    <img src="~/BlogThumbnails/@item.SenderUser.WriterImage" class="avatar avatar-sm me-3" alt="user1">
                                </div>
                                <div class="d-flex flex-column justify-content-center">
                                    <h6 class="mb-0 text-sm">@item.SenderUser.WriterName</h6>

                                </div>
                            </div>
                        </td>
                        <td>
                            <p class="text-xs font-weight-bold mb-0">@item.Subject</p>
                          
                        <td class="align-middle text-center text-sm">
                            <span class="text-secondary text-xs font-weight-bold">@item.CreatedTime</span>
                        </td>
                       
                        <td class="align-middle">
                            <a class="text-secondary font-weight-bold text-xs" asp-action="Details" asp-controller="Message" asp-route-id="@item.MessageID">
                                Open Message
                            </a>
                        </td>
                    </tr>
                }

              




            </tbody>
        </table>
        
    </div>
    </div>

    <div class="card w-10 p-3 mx-4 my-5 align-items-center ">
        <a class="font-weight-bold text-xs" asp-action="Send" asp-controller="Message">
            Send Message
        </a>
    </div>


    <div class="card p-3">
    <div class="table-responsive p-1">
        <h6>Outbox</h6>
        <table class="table align-items-center mb-0">
            <thead>
                <tr>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">User</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Subject</th>
                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Date</th>

                    <th class="text-secondary opacity-7"></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in ViewBag.Outbox)
                {
                    <tr>
                        <td>
                            <div class="d-flex px-2 py-1">
                                <div>
                                    <img src="~/BlogThumbnails/@item.ReceiverUser.WriterImage" class="avatar avatar-sm me-3" alt="user1">
                                </div>
                                <div class="d-flex flex-column justify-content-center">
                                    <h6 class="mb-0 text-sm">@item.ReceiverUser.WriterName</h6>

                                </div>
                            </div>
                        </td>
                        <td>
                            <p class="text-xs font-weight-bold mb-0">@item.Subject</p>

                        <td class="align-middle text-center text-sm">
                            <span class="text-secondary text-xs font-weight-bold">@item.CreatedTime</span>
                        </td>

                        <td class="align-middle">
                            <a class="text-secondary font-weight-bold text-xs" asp-action="Details" asp-controller="Message" asp-route-id="@item.MessageID">
                                Open Message
                            </a>
                        </td>
                    </tr>
                }






            </tbody>
        </table>
        
    </div>
    </div>

</div>