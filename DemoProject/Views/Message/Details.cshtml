@model MessageDto

@{
    Layout = "~/Views/Shared/_WriterLayout.cshtml";

}




<div class=" border-0 d-flex p-4 mb-2 card border-radius-lg">
    <div class="d-flex flex-column">
        <h6 class="mb-3 text-sm">
            @Model.SenderUser.WriterName</h6>
            <span class="mb-2 text-xs">Email Address: <span class="text-dark font-weight-bold ms-sm-2">@Model.SenderUser.WriterMail</span></span>
            <span class="mb-2 text-xs">Subject: <span class="text-dark ms-sm-2 font-weight-bold">@Model.Subject</span></span>
            <span class="text-xs">Message: <span class="text-dark ms-sm-2 font-weight-bold">@Model.MessageDetails</span></span>
    </div>
    <div class="ms-auto text-end">
        
        <a class="btn btn-link text-danger text-gradient px-3 mb-0" href="javascript:;"><i class="far fa-trash-alt me-2"></i>Delete</a>
        <a class="btn btn-link text-dark px-3 mb-0" href="javascript:;"><i class="fas fa-pencil-alt text-dark me-2" aria-hidden="true"></i>Edit</a> 
    </div>
</div>