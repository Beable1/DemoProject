@model BlogDto

@{
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
    var Id = ViewBag.id;
}

<div class="row">
    <div class="col-md-6">

        <form asp-action="Create" method="post" asp-controller="Writer" enctype="multipart/form-data">
            
           <input type="hidden" name="id" value="@Id"/>

            <div class="form-group">
                <label for="BlogTitle">Blog Title</label>
                <input type="text" id="BlogTitle" name="BlogTitle" class="form-control" />
                <span asp-validation-for="BlogTitle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="BlogTitle">Blog Content</label>
                <textarea id="BlogContent" name="BlogContent" class="form-control"></textarea>
                <span asp-validation-for="BlogContent" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label >Blog Content</label>
               <input type="file" name="BlogThumbnail" />
            </div>


            <div class="form-group">
                <label for="CategoryId">Category</label>
                <select id="CategoryId" name="CategoryId" class="form-control">
                    <option value="0" selected>Select</option>
                    @foreach (var category in ViewBag.categories)
                    {
                        <option value="@category.Value">@category.Text</option>
                    }
                </select>
                <span class="text-danger" asp-validation-for="CategoryId"></span>
            </div>

            <div class="form-group">
                <input type="submit" name="Save" class="card w-20 m-4 py-2 align-items-center " />
            </div>
        </form>

    </div>

</div>