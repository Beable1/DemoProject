@model BlogDto

@{
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
    var Id = ViewBag.id;
}

<div class="row">
    <div class="col-md-6">

        <form asp-action="Update" method="post" asp-controller="Writer" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" name="WriterId" value="@Id" />

            <div class="form-group">
                <label for="BlogTitle">Blog Title</label>
                <input type="text" asp-for="BlogTitle" name="BlogTitle" class="form-control" />
                <span asp-validation-for="BlogTitle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="BlogTitle">Blog Content</label>
                <textarea asp-for="BlogContent" name="BlogContent" class="form-control"></textarea>
                <span asp-validation-for="BlogContent" class="text-danger"></span>
            </div>

            <div class="form-group mx-2">
                <label>Blog Image</label>
                <input type="file" name="BlogThumbnail" />
            </div>

            <div class="form-group">
                <label for="CategoryId">Category</label>
                <select asp-for="CategoryId" name="CategoryId" class="form-control">
                    <option value="0" selected>Select</option>
                    @foreach (var category in ViewBag.categories)
                    {
                        <option value="@category.Value">@category.Text</option>
                    }
                </select>
                <span class="text-danger" asp-validation-for="CategoryId"></span>
            </div>

            <div class="form-group">
                <input type="submit" name="Save" class="btn-primary " />
            </div>
        </form>

    </div>

</div>