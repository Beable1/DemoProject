@model BlogDto

<h1>Save</h1>
<div class="row">
    <div class="col-md-6">

        <form asp-action="Create" method="post" asp-controller="Blogs">

            <div class="form-group">
                <label asp-for="BlogTitle"></label>
                <input asp-for="BlogTitle" class="form-control" />
                <span asp-validation-for="BlogTitle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BlogContent"></label>
                <input asp-for="BlogContent" class="form-control" />
                <span asp-validation-for="BlogContent" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" asp-items="ViewBag.categories" class="form-control"> <option value="0" selected>Seçiniz</option></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" name="Save" class="btn-primary " />
            </div>
        </form>

    </div>

</div>