@using CoreLayer.DTOs
@model List<BlogDto>

@{
    var categories = ViewBag.categories;
}

<!-- Start Blog Post Siddebar -->
<div class="col-lg-4 sidebar-widgets">
    <div class="widget-wrap">
        <div class="single-sidebar-widget newsletter-widget">
            <h4 class="single-sidebar-widget__title">Newsletter</h4>
            <div class="form-group mt-30">
                <div class="col-autos">
                    <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="Enter email" onfocus="this.placeholder = ''"
                           onblur="this.placeholder = 'Enter email'">
                </div>
            </div>
            <button class="bbtns d-block mt-20 w-100">Subcribe</button>
        </div>


        <div class="single-sidebar-widget post-category-widget">
            <h4 class="single-sidebar-widget__title">Category</h4>
            <ul class="cat-list mt-20">

                @foreach (var item in categories)
                {
                    <li>
                        <a href="#" class="d-flex justify-content-between">
                            <p>@item.CategoryName</p>

                        </a>
                    </li>

                }


            </ul>
        </div>


        @* DİĞER YAZILARI KISMI *@


        <div class="single-sidebar-widget popular-post-widget">
            <h4 class="single-sidebar-widget__title">Other Blogs of Writer</h4>
            <div class="popular-post-list">
                @foreach (var item in Model)
                {

                    string content = item.BlogTitle;
                    string preview = content;

                    if (content.Length > 20)
                    {
                        int lastIndex = content.Substring(0, 30).LastIndexOf(" ");
                        if (lastIndex > 0)
                        {
                            preview = content.Substring(0, lastIndex) + "...";
                        }
                        else
                        {
                            preview = content.Substring(0, 30) + "...";
                        }
                    }

                    <div class="single-post-list">
                        <div class="thumb">


                            <img class="card-img rounded-0" src="~/BlogThumbnails/@item.BlogThumbnailImage" alt="">

                            

                            <ul class="thumb-info">
                                
                                <li><a href="#">@item.CreatedTime</a></li>
                            </ul>


                        </div>
                        <div class="details mt-20">
                            <a href="blog-single.html">
                                <h6>@preview </h6>
                            </a>
                        </div>
                    </div>
                }
               

                </div>
               
            </div>
        </div>

        
    </div>

<!-- End Blog Post Siddebar -->