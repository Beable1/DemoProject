@model List<Message2>
@foreach(var item in Model){
<li class="mb-2">
    <a class="dropdown-item border-radius-md" asp-action="details" asp-controller="message" asp-route-id="@item.MessageID">
        <div class="d-flex py-1">
            <div class="my-auto">
                    <img src="~/BlogThumbnails/@item.SenderUser.WriterImage" class="avatar avatar-sm  me-3 ">
            </div>
            <div class="d-flex flex-column justify-content-center">
                <h6 class="text-sm font-weight-normal mb-1">
                    <span class="font-weight-bold">@item.SenderUser.WriterName </span> 
                        sana bir mesaj gönderdi
                </h6>
                <p class="text-xs text-secondary mb-0">
                   
                        @item.MessageDetails.Substring(0, item.MessageDetails.Substring(0, 20).LastIndexOf(" "))...
                    
                </p>
            </div>
        </div>
    </a>
</li>
}
