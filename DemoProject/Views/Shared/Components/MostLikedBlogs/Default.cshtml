@model List<BlogDto>

<h5 class="mb-3">Most Liked</h5>

    @foreach (var item in Model)
    {
        <div class="col-lg-6">
        <div class="card max-vh-50 mb-4">
            <div class="overflow-hidden position-relative border-radius-lg bg-cover min-px-200  h-100" style="background-image: url('/BlogThumbnails/@item.BlogThumbnailImage');">
                    <span class="mask bg-gradient-dark"></span>
                    <div class="card-body position-relative z-index-1 d-flex flex-column h-100 p-3">
                        <h5 class="text-white font-weight-bolder mb-4 pt-2">@item.BlogTitle</h5>
                        <p class="text-white"> @item.BlogContent.Substring(0, item.BlogContent.Substring(0, 60).LastIndexOf(" "))...</p>

                        <div class="row">
                            <div class="col-10">
                    <a class="text-white text-sm font-weight-bold mb-0 icon-move-right mt-auto" asp-action="BlogDetails" asp-controller="blogs" asp-route-id="@item.Id">
                            Read More
                            <i class="fas fa-arrow-right text-sm ms-1" aria-hidden="true"></i>
							</a>
						</div>

                        <div class="col-1 bg-white rounded-3  ">
                            <div class="d-flex align-items-center">
								<i class="fas fa-star me-1"></i>
                                @await Component.InvokeAsync("Blogs", new { blogId = item.Id })
                            </div>
                            
                            
                        </div>
					</div>


                    </div>
                </div>
            </div>
        </div>
    }


